<div id="message-<%= message.id %>" data-user-id="<%= message.user.id %>" class="<%= message.user == current_user ? 'sent-by-mentor' : 'sent-by-non-mentor' %>">
  <small>
    <strong><%= message.user.name %></strong>
    <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <p><%= message.content%></p>
</div>

<div id="message-<%= message.id %>" data-user="<%= message.user&.name %>" class="<%= current_user.name == message.user.name ? 'sent-by-mentor' : 'sent-by-non-mentor' %>">
  <small>
    <strong><%= message.user.name %></strong>
    <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <p><%= message.content %></p>
</div>

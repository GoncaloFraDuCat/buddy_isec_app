<%= simple_form_for @user do |f| %>
  <div class="bio-field">
    <%= f.label :bio %>
    <%= f.text_area :bio, size: "60x12" %>
  </div>

  <div class="photo-field">
    <%= f.input :photo, as: :file %>
  </div>
  <div class="update-bio-button">
    <%= f.submit "Update Profile" %>
  </div>
<% end %>

<body class='log-in-body'>
  <% content_for :page_title do %>
    Log In
  <% end %>

  <div class="login-containers">

    <%= image_tag 'campus_buddy_logo.png', alt: "frontpagelogo", class: 'FPL' %>



    <% if Rails.env.development? %>

      <%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>
        <div class="log-in-email">
          <%= f.label :email, "Email" %><br />
          <%= f.email_field :email, autocomplete: "email" %>
        </div>

        <div class="log-in-id">
          <%= f.label :student_id, "Student ID" %><br />
          <%= f.number_field :student_id, autofocus: true, autocomplete: "student_id" %>
        </div>


        <div class="actions">
          <%= button_to image_tag('log-in_logo.png', alt: 'log-in_logo', class: 'log-in_logo'), user_session_path, method: :post, class: 'button_to' %>
        </div>
      <% end %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</body>

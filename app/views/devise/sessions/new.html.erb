<% content_for :page_title do %>
 Log In
<% end %>

<div class="login-containers">

  <%= image_tag 'frontpagelogo.png', alt: "frontpagelogo", class: 'FPL' %>

  <h2>Encontra o teu Mentor :)</h2>

  <%= form_for(resource, as: resource_name, url: user_session_path) do |f| %>
    <div class="field">
      <%= f.label :student_id, "Student ID" %><br />
      <%= f.text_field :student_id, autofocus: true, autocomplete: "student_id" %>
    </div>

   <div class="actions">
<%= button_to image_tag('log-in_logo.png', alt: 'log-in_logo', class: 'log-in_logo'), user_session_path, method: :post, class: 'button_to' %>
    </div>
 <% end %>
  <%= render "devise/shared/links" %>
</div>

<% content_for :page_title do %>
  Matches
<% end %>

<% if @requests.empty? %>
  <h2>NÃ£o tens pedidos ativos</h2>
<% else %>
  <h1><%= current_user.mentor? ? 'Pedidos' : 'Os Teus Pedidos' %></h1>
  <div class="container">
    <div class="mentors_table">
      <% @requests.each do |request| %>
        <div class="request">
          <div class="user-img">
            <% if request.mentor&.default_photo.present? %>
              <%= image_tag request.mentor.default_photo %>
            <% else %>
            <div class="user-img-1">
              <%= image_tag "default_user_image.jpg" %>
            </div>
            <% end %>
          </div>
          <div class="name">
            <% if request.mentee == current_user %>
              <%= request.mentor.name %>
            <% else %>
              <%= request.mentee.name %>
            <% end %>
          </div>
          <div class="others">
            <%= render partial: 'shared/request_status', locals: { request: request } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

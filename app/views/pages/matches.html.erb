<% content_for :page_title do %>
 Matches
<% end %>
<%= button_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-outline-light mx-2" %>

<footer class="navbar navbar-expand-lg navbar-dark bg-dark fixed-bottom">
    <div class="container-fluid justify-content-center">
      <%# if current_user %>
      <div class="navbar-button">
        <%= link_to matches_path, class: "btn btn-outline-light mx-2 navbar-button" do %>
            <%= image_tag "matches-logo.png", alt: "Matches", class: "navbar-logo" %>
        <% end %>
      </div>

      <div class="navbar-button">
        <%= link_to search_path, class: "btn btn-outline-light mx-2 navbar-button" do %>
            <%= image_tag "search-logo.png", alt: "Search", class: "navbar-logo" %>
        <% end %>
      </div>

      <div>
        <%= link_to profile_path, class: "btn btn-outline-light mx-2 navbar-button" do %>
            <%= image_tag "profile-logo.png", alt: "Profile", class: "navbar-logo" %>
        <% end %>
      </div>
    </div>
</footer>
